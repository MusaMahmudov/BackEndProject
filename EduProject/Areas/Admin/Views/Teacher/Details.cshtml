
@{
    ViewData["Title"] = "Details Teacher";
}

@using EduProject.Areas.Admin.ViewModels.AdminTeacherViewModel

@model AdminDetailTeacherViewModel

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body" style="font-size:20px">

            <a class="btn btn-primary" asp-action="index">GO BACK</a>

            <img src="~/assets/img/teacher//@Model.Image" style="width:25%" />
            <h1>Name:@Model.Name</h1>
            <h1 style="font-size:15px">Faculty:@Model.Faculty</h1>
            <h1 style="font-size:15px">Rank:@Model.Rank</h1>
            <h1 style="font-size:15px">Mail:@Model.Mail</h1>
            <h1 style="font-size:15px">Skype:@Model.Skype</h1>
            <h1 style="font-size:15px">CreatedBy:@Model.CreatedBy</h1>
            <h1 style="font-size:15px">CreatedDate:@Model.CreatedDate</h1>
            <h1 style="font-size:15px">UpdatedBy:@Model.UpdatedBy</h1>
            <h1 style="font-size:15px">UpdatedDate:@Model.UpdatedDate</h1>
            <h1 style="font-size:15px">Degree:@Model.Degree</h1>
            <h1 style="font-size:15px">Experience:@Model.Experience</h1>
            <h1 style="font-size:15px">Experience:@Model.socialMedia</h1>

            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>

                    <ul>
                        @foreach (var socialMedia in Model.socialMedia)
                        {

                            <li><a href="@socialMedia.value"><i class="@socialMedia.Icon"></i></a></li>


                        }
                </ul>
            </div>
            </div>
           
          

            @for(int i = 0;i < Model.SkillName.Count(); i++)
            {
                <h1>Skill:@Model.SkillName[i] :@Model.Percent[i]  </h1>

            }

            @foreach (var skill in Model.SkillName)
            {
            }
            



        </div>
    </div>
</div>