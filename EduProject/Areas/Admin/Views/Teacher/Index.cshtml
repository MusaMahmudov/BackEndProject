
@{
    ViewData["Title"] = "Index";
}

@using EduProject.Areas.Admin.ViewModels.AdminTeacherViewModel;

@model IEnumerable<AdminTeacherViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Teachers</h4>

                    <div class="table-responsive">

                        <a class="btn btn-primary" asp-action="create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>IsDeleted</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Duty</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (AdminTeacherViewModel teacher in Model)
                                {
                                    <tr>
                                    
                                        <td>  <a class="btn btn-@( teacher.IsDeleted ? "danger" : "success") ">>@teacher.IsDeleted</a></td>

                                        <td><img src="~/assets/img/teacher//@teacher.Image" /></td>
                                        <td>@teacher.Name</td>
                                        <td>@teacher.Rank</td>

                                        <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@teacher.Id">Detail</a></td>
                                        <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@teacher.Id">Update</a></td>

                                        <td><a class="btn btn-danger @(Model.Count() <= 3 || teacher.IsDeleted ? "disabled" : "")" asp-action="Delete" asp-route-id="@teacher.Id">Delete</a></td>



                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->
