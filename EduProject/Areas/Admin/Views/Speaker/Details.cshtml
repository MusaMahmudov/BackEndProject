
@{
    ViewData["Title"] = "Speaker Details";
}

@using EduProject.Areas.Admin.ViewModels.AdminSpeakerViewModels;

@model DetailSpeakerViewModel

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body" style="font-size:20px">

            <a class="btn btn-primary" asp-action="index">GO BACK</a>

            <img src="~/assets/img/speaker//@Model.Image" style="width:25%" />
            <h1>Name:@Model.Name</h1>
            <h1 style="font-size:15px">Duty:@Model.Duty</h1>
            @foreach (var Event in Model.EventName)
            {
                <h1>Event:@Event</h1>
            }
            <h1>CreatedBy:@Model.CreatedBy</h1>
            <h1>CreatedTime:@Model.CreatedDate</h1>
            <h1>UpdatedBy:@Model.UpdatedBy</h1>
            <h1>UpdatedTime:@Model.UpdatedDate</h1>



        </div>
    </div>
</div>


