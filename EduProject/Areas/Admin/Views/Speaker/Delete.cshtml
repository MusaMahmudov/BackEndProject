
@{
    ViewData["Title"] = "Delete Speaker";
}

@using EduProject.ViewModels.SpeakerViewModels
@model SpeakerViewModel

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body" style="font-size:20px">

            <a class="btn btn-primary" asp-action="index">GO BACK</a>

            <img src="~/assets/img/speaker//@Model.Image" style="width:25%" />
            <h1>Name:@Model.Name</h1>
            <h1 style="font-size:15px">Description:@Model.Duty</h1>
            <form method="post">
                <button class="btn btn-danger" type="submit">Delete Speaker</button>

            </form>

        </div>
    </div>
</div>
