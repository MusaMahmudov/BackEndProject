
@{
    ViewData["Title"] = "Index";
}

@using EduProject.ViewModels.SpeakerViewModels;


@model IEnumerable<SpeakerViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Speakers</h4>

                    <div class="table-responsive">

                        <a class="btn btn-primary" asp-action="create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>IsDeleted</th>

                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Duty</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SpeakerViewModel speaker in Model)
                                {
                                    <tr>
                                        <td>@speaker.IsDeleted</td>

                                        <td><img src="~/assets/img/speaker//@speaker.Image" /></td>
                                        <td>@speaker.Name</td>
                                        <td>@speaker.Duty</td>

                                        <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@speaker.Id">Detail</a></td>
                                        <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@speaker.Id">Update</a></td>

                                        <td><a class="btn btn-danger @(Model.Count() <= 2 ? "disabled" : "")" asp-action="Delete" asp-route-id="@speaker.Id">Delete</a></td>



                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->
