
@{
    ViewData["Title"] = "Update User";
}

@using EduProject.Areas.Admin.ViewModels.UserViewModels;
@model UpdateUserViewModel

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update User</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
               
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label for="exampleInputPassword1">UserName</label>
                    <input asp-for="UserName" class="form-control" placeholder="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Fullname</label>
                    <input asp-for="Fullname" class="form-control" placeholder="Fullname">
                    <span asp-validation-for="Fullname" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <button type="submit" asp-action="Update" class="btn btn-primary mr-2">Submit</button>

            </form>
        </div>
    </div>
</div>



