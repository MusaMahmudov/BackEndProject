
@{
    ViewData["Title"] = "Teacher Details";
}
@model DetailTeacherViewModel
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner")
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img src="~/assets/img/teacher/@Model.Image" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Name</h2>
                    <h5>@Model.Rank</h5>
                    <h4>about me</h4>
                    <p> @Model.Description </p>
                    <ul>
                        <li><span>degree: </span>@Model.Degree</li>
                        <li><span>experience: </span>@Model.Experience</li>
                        <li><span>hobbies: </span>@Model.Hobbies</li>
                        <li><span>faculty: </span>@Model.Faculty</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.Mail</p>
                    <p><span>make a call : </span>@Model.PhoneNumber</p>
                    <p><span>skype : </span> @Model.Skype</p>
                    <ul>
                        @foreach(var socialMedia in Model.socialMedia)
                        {
                            <li><a href="@socialMedia.value">@Html.Raw(socialMedia.Icon)</a></li>

                        }
                       
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @for(int i = 0;i<Model.SkillNames.Count;i++)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>@Model.SkillNames[i]</span>
                                    <div class="progress">
                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: 85%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@Model.Percent[i] %</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                      
                        
                        
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->
<script src="https://kit.fontawesome.com/8f2bd1d04c.js" crossorigin="anonymous"></script>