
@{
    ViewData["Title"] = "Teachers";
}
@model IEnumerable<TeacherViewModel>
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner")
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach(var teacher in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-action="Details" asp-route-id="@teacher.Id"><img src="~/assets/img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-action="Details">@teacher.Name</a></h2>
                            <h4>@teacher.Rank</h4>
                            <ul>
                                @foreach(var socialMedia in teacher.socialMedia)
                                {
                                    <li><a href="@socialMedia.value">@Html.Raw(socialMedia.Icon)</a></li>

                                }
                               
                            </ul>
                        </div>
                    </div>
                </div>

            }
         
        </div>
    </div>
</div>
<!-- Teacher End -->

<script src="https://kit.fontawesome.com/8f2bd1d04c.js" crossorigin="anonymous"></script>