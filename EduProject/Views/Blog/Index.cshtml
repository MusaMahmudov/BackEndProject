@using System.Globalization;

@{
    ViewData["Title"] = "Blogs";
}

@model IEnumerable<BlogViewModel>
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner");

<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach(var Blog in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog mb-60">
                        <div class="blog-img">
                            <a asp-action="Details"  asp-route-id="@Blog.Id"><img src="~/assets/img/blog/@Blog.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By @Blog.CreatedBy  / @Blog.CreatedDate.Day   @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Blog.CreatedDate.Month), @Blog.CreatedDate.Year  /  <i class="fa fa-comments-o"></i> 4</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a asp-action="Details" asp-route-id="@Blog.Id">@Blog.Name </a></h2>
                                <a asp-action="Details" asp-route-id="@Blog.Id">read more</a>
                            </div>
                        </div>
                    </div>
                </div>

            }
           
        </div>
       
    </div>
</div>
<!-- Blog End -->

