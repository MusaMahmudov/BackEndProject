
@{
    ViewData["Title"] = "ForgotPassword";
}



@model ForgotPasswordViewModel
<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner");

<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <span>Please write your Email</span>
                        </div>
                        <div class="login-form">
                            <div class="texr-danger" asp-validation-summary="ModelOnly">
                            </div>
                            <form method="post">
                                <input asp-for="Email" placeholder="Email">
                                <span asp-validation-for="Email"></span>
                          

                                <div class="button-box">
                                  
                                    <button type="submit" class="default-btn">Send Email</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
